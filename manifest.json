{
  "manifest_version": 2,
  "name": "Guard-Cross",
  "description": "A simple Chrome Extension to add fun features to the Guardian Crossword site.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://*.theguardian.com/crosswords/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Go to Guardian Crosswords page"
  }
}
